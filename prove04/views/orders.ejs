<body>
    <h1>Orders: </h1>

    <% if (orders.length <= 0) { %>
        <h1>Nothing there!</h1>
    <% } else { %>
        <ul class="orders">
            <% orders.forEach(order => { %>
                <li class="orders__item">
                    <h1>Order - # <%= order._id %></h1>
                    <ul>
                        <% order.books.forEach(b => { %>
                            <p><%= b.book.title %>(<%= b.quantity %>)</p>
                        <% }); %>
                    </ul>
                </li>
            <% }); %>
        </ul>
    <% } %>
